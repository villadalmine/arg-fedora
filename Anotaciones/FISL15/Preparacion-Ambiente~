[root@JuanManuelDeRosas ~]# mkdir -p /srv/repos/Fedora18d
[root@JuanManuelDeRosas ~]# echo "192.168.200.1:/srv/nfs/Fedora18dvd   /srv/repos/Fedora18   nfs   rw  0 0" >> /etc/fstab
[root@JuanManuelDeRosas ~]# 






